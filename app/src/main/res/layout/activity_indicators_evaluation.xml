<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gui.DoIndicatorsEvaluation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/base"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            app:columnCount="2"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:rowCount="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="1">

                <ImageButton
                    android:id="@+id/indicatorObsButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:padding="10dp"

                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ind_obs" />

                <TextView
                    android:id="@+id/indicatorObsText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/ind_obs"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelineindicatorObs2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineindicatorObs4"
                    app:layout_constraintStart_toStartOf="@+id/guidelineindicatorObs3"
                    app:layout_constraintTop_toTopOf="@+id/guidelineindicatorObs1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineindicatorObs1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.65" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineindicatorObs2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.9" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineindicatorObs3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineindicatorObs4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1.6">

                <ImageButton
                    android:id="@+id/helpIndButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_help_24_bl" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.gridlayout.widget.GridLayout>


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:rowCount="1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/previous_indicatorButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/anterior" />

                <TextView
                    android:id="@+id/previous_indicatorText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/previous_indicator"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelineprevious_indicator2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineprevious_indicator4"
                    app:layout_constraintStart_toStartOf="@+id/guidelineprevious_indicator3"
                    app:layout_constraintTop_toTopOf="@+id/guidelineprevious_indicator1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/save_changesButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/guardar" />

                <TextView
                    android:id="@+id/save_changesText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/save_changes"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelinesave_changes2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelinesave_changes4"
                    app:layout_constraintStart_toStartOf="@+id/guidelinesave_changes3"
                    app:layout_constraintTop_toTopOf="@+id/guidelinesave_changes1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.72" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/next_indicatorButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/siguiente" />

                <TextView
                    android:id="@+id/next_indicatorText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="@string/next_indicator"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelinenext_indicator2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelinenext_indicator4"
                    app:layout_constraintStart_toStartOf="@+id/guidelinenext_indicator3"
                    app:layout_constraintTop_toTopOf="@+id/guidelinenext_indicator1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.gridlayout.widget.GridLayout>



        <GridLayout
            android:id="@+id/layout_switches"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="1"
            android:padding="2dp"
            android:rowCount="5"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline1">


            <Switch
                android:id="@+id/evidence1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"
                android:background="@drawable/switch_style"
                android:text="@string/evidence1" />

            <Switch
                android:id="@+id/evidence2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"
                android:background="@drawable/switch_style"
                android:text="@string/evidence2" />

            <Switch
                android:id="@+id/evidence3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"
                android:background="@drawable/switch_style"
                android:text="@string/evidence3" />

            <Switch
                android:id="@+id/evidence4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"
                android:background="@drawable/switch_style"
                android:text="@string/evidence4" />


        </GridLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.795" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <TextView
            android:id="@+id/indicator_caption"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705">

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loading_evidences"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintVertical_bias="0.076" />
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>