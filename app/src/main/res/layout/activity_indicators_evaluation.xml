                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeMaxTextSize="10sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="@string/ambit_caption"
