<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gui.DoIndicatorsEvaluation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/base"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            app:columnCount="3"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:rowCount="1">

            <Button
                android:id="@+id/improvement_opportunities_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/improvement_opportunities"
                android:padding="2dp"
                app:layout_columnWeight="2"
                android:textSize="14sp"
                android:background="@drawable/round_button_background"
                app:layout_rowWeight="1" />


            <TextView
                android:id="@+id/count_ind"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Indicador 25/40"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_constraintBottom_toTopOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="1.6">

                <ImageButton
                    android:id="@+id/helpIndButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_help_24_bl" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.gridlayout.widget.GridLayout>


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:rowCount="1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/previous_indicatorButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/anterior" />

                <TextView
                    android:id="@+id/previous_indicatorText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/previous_indicator"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelineprevious_indicator2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineprevious_indicator4"
                    app:layout_constraintStart_toStartOf="@+id/guidelineprevious_indicator3"
                    app:layout_constraintTop_toTopOf="@+id/guidelineprevious_indicator1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineprevious_indicator4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/save_changesButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/guardar" />

                <TextView
                    android:id="@+id/save_changesText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/save_changes"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelinesave_changes2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelinesave_changes4"
                    app:layout_constraintStart_toStartOf="@+id/guidelinesave_changes3"
                    app:layout_constraintTop_toTopOf="@+id/guidelinesave_changes1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.72" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinesave_changes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="2dp"
                app:layout_columnWeight="2"
                app:layout_rowWeight="2">

                <ImageButton
                    android:id="@+id/next_indicatorButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_button_background"
                    android:contentDescription="@string/add_new_indicators_evaluation"
                    android:scaleType="fitCenter"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/siguiente" />

                <TextView
                    android:id="@+id/next_indicatorText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="@string/next_indicator"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guidelinenext_indicator2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelinenext_indicator4"
                    app:layout_constraintStart_toStartOf="@+id/guidelinenext_indicator3"
                    app:layout_constraintTop_toTopOf="@+id/guidelinenext_indicator1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelinenext_indicator4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.gridlayout.widget.GridLayout>


        <ScrollView
            android:id="@+id/complete_evidences"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indicator_caption_complete"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="5sp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/evidence1_complete"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:text="@string/evidence1"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:background="@drawable/switch_style"
                    android:buttonTint="@color/checkbox_color"
                    android:padding="5dp"/>
                <CheckBox
                    android:id="@+id/evidence2_complete"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:text="@string/evidence2"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:background="@drawable/switch_style"
                    android:buttonTint="@color/checkbox_color"
                    android:padding="5dp"/>
                <CheckBox
                    android:id="@+id/evidence3_complete"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:text="@string/evidence3"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:background="@drawable/switch_style"
                    android:buttonTint="@color/checkbox_color"
                    android:padding="5dp"/>
                <CheckBox
                    android:id="@+id/evidence4_complete"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:text="@string/evidence4"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:background="@drawable/switch_style"
                    android:buttonTint="@color/checkbox_color"
                    android:padding="5dp"/>

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/simple_evidences"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indicator_caption_simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="25sp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:hintTextAppearance="@style/HelperTextAppearance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ev1txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/evidence1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:hintTextAppearance="@style/HelperTextAppearance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ev2txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/evidence2" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:hintTextAppearance="@style/HelperTextAppearance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ev3txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/evidence3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ev4txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/evidence4" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.795" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />






    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline88" />

        <TextView
            android:id="@+id/textProgress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="@string/loading_evidences"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>